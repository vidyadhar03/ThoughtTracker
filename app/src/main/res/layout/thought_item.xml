<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#edf7fe"
    android:layout_marginTop="12dp"
    app:cardElevation="6dp"
    app:contentPadding="6dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="6dp"
    android:id="@+id/thoughtcardid">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


      <LinearLayout
          android:id="@+id/linearLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="6dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

         <TextView
             android:id="@+id/textView"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_weight="1"
             android:text="time"
             android:textColor="@color/black"
             android:textSize="12sp" />

         <ImageView
             android:id="@+id/optionimageid"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_baseline_more_horiz_24"
             app:tint="@color/black"
             android:contentDescription="Thought Menu Options" />

      </LinearLayout>


      <TextView
          android:id="@+id/thoughttextid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="6dp"
          android:gravity="center"
          android:padding="6dp"
          android:text="thought goes here"
          android:textColor="@color/black"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


      <TextView
          android:id="@+id/hiddenid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Thought is hidden"
          android:textStyle="italic"
          android:textColor="@color/black"
          android:gravity="center"
          android:visibility="gone"
          android:paddingVertical="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/thoughttextid" />


   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>